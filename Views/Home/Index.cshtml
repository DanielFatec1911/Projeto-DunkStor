@model IEnumerable<DunkStore.Models.Produto>

@{
    ViewData["Title"] = "Loja";
}

<!-- CARROSSEL DE DESTAQUES -->
<div id="mainCarousel" class="carousel slide mb-5 shadow" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>

    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
            <img src="https://i.ebayimg.com/images/g/wXMAAOSwg6Jn9x3H/s-l960.webp"
                 class="d-block w-100"
                 style="height: 500px; object-fit: cover;"
                 alt="Tênis Destaque">

            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-75 rounded p-2">
                <h2 class="text-uppercase fw-bold text-white">Domine a Quadra</h2>
                <p class="fs-5 text-white">Os melhores lançamentos estão aqui.</p>
                <a href="#vitrine" class="btn btn-warning fw-bold">Ver Ofertas</a>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="https://turbologo.com/articles/wp-content/uploads/2019/10/NBA-new-logo.png.webp"
                 class="d-block w-100"
                 style="height: 500px; object-fit: cover;"
                 alt="Oferta Especial">

            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-75 rounded p-2">
                <h2 class="text-uppercase fw-bold text-white">Voe Alto</h2>
                <p class="fs-5 text-white">Confira nossa coleção exclusiva.</p>
                <a href="#vitrine" class="btn btn-warning fw-bold">Comprar Agora</a>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
        <span class="visually-hidden">Próximo</span>
    </button>
</div>

<!-- Filtros de Categoria -->
<div class="container mb-5 text-center" id="vitrine">
    <h3 class="mb-4 text-uppercase fw-bold">Navegue por Categoria</h3>

    <div class="d-flex justify-content-center gap-2 flex-wrap">
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">Todos</a>

        @foreach (var cat in ViewBag.Categorias)
        {
            <a asp-action="Index"
               asp-route-categoriaSelecionada="@cat.Nome"
               class="btn btn-outline-secondary rounded-pill px-4">
                @cat.Nome
            </a>
        }
    </div>
</div>

<!-- Grid de Produtos -->
<div class="container mb-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card card-product h-100 shadow-sm">

                    <div style="height: 250px; overflow: hidden; background-color: #f0f0f0;">
                        <img src="@item.ImagemUrl"
                             class="w-100 h-100"
                             style="object-fit: cover;"
                             alt="@item.Nome"
                             onerror="this.src='https://via.placeholder.com/300x300?text=Sem+Imagem'">
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="mb-auto">
                            <small class="text-muted text-uppercase fw-bold">@item.Categoria.Nome</small>
                            <h5 class="card-title fw-bold mt-1">@item.Nome</h5>
                        </div>

                        <div class="mt-3">
                            <p class="card-price mb-2">R$ @item.Preco.ToString("N2")</p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark w-100">
                                Ver Detalhes
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>


<div id="contato" class="footer-basketball mt-auto">
    <div class="container">
        <div class="row text-center">
         
            <div class="col-md-4 mb-4">
                <h4 class="footer-heading"> Endereço</h4>
                <p class="footer-text">
                    Av. Paulista, 1000 - SP<br>
                    Loja 23 - Térreo
                </p>
            </div>
           
            <div class="col-md-4 mb-4">
                <h4 class="footer-heading"> Fale Conosco</h4>
                <p class="footer-text">
                    Email: contato@dunkstore.com<br>
                    Tel: (11) 99999-9999
                </p>
            </div>
     
            <div class="col-md-4 mb-4">
                <h4 class="footer-heading"> Horário</h4>
                <p class="footer-text">
                    Seg - Sex: 09:00 - 20:00<br>
                    Sáb: 10:00 - 18:00
                </p>
            </div>
        </div>
      
        <div class="row mt-4 border-top border-secondary pt-3">
            <div class="col-12 text-center">
                <p class="small text-muted">&copy; 2025 DunkStore - Todos os direitos reservados.</p>
            </div>
        </div>
    </div>
</div>